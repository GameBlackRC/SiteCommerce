<!DOCTYPE html>
<html>
    <%- include('./template/head') -%>
    <body>
        <%- include('./template/header') -%>
        <main class="main-section">
        <h1>Tous les Produits</h1>
        <section class="row-section" id="section-list-produits">
            <% produits.forEach(produit => { %>
                <div>
                    <a href="/produits/<%= produit.id%>">
                        <article>
                            <img src="<%= produit.urlImage%>" alt="<%= produit.nom%>"/>
                            <div class="article-infos">
                                <p><%= produit.nom%></p>
                                <p><%= produit.prix%> â‚¬</p>
                            </div>
                        </article>
                    </a>
                    <button class="button" onclick="panier('<%= produit.id%>')">Ajouter au panier</button>
                </div>

            <% }); %>
        </section>
    </main>
        <%- include('./template/footer') -%>
    </body>
</html>
    